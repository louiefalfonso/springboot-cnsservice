scalar Long

type Client {
    id: ID!
    firstName: String!
    lastName: String!
    phoneNumber: Int
}

# Root
type Query {
    findAllClients: [Client]!
    countClients: Long!
}

# Root
type Mutation {
    createClient(firstName: String! lastName: String! phoneNumber: Int): Client!
    updateClient(id: ID!,  firstName: String! lastName: String! phoneNumber: Int): Client!
    deleteClient(id: ID!): Boolean
}